
@model Exam.Models.user
@{
    ViewData["Title"] = "Home Page";

}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="text-center">
    <div class="container" style="margin-top:100px">
        <div class="row">
            <div class="col-6 offset-3">
                <form asp-action="Index" style="padding:50px; padding-top:20px; border:2px solid black;">
                    <div class="form-group" style="">
                        
                            <label class="text-center" style="font-weight:bold; margin-bottom:25px;">KULLANICI GİRİŞ</label>
                               
                       
                        <div class="form-group">
                            <input type="text" id="kullanciadi" asp-for="kullanici" name="kullanici"  placeholder="Kullanıcı Adı" class="form-control" />

                        </div>
                        <div class="form-group">
                            <input type="text" id="kullancisifresi" asp-for="sifre" name="sifre"  placeholder="Sifre" class="form-control" />
                            
                        </div>
                        <div class="form-group">
                            <input type="submit" style="float:right;" value="GİRİŞ" />

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@{
    if (TempData["msg"] != null)
    {
    <script type="text/javascript">
       

            swal("@TempData["msg"]", {
                icon: "info",

                //timer: 3000,
                
            });
        
    </script>
    }
}
